<table class="table table-hover">
    <thead>
      <tr class="table-tr">
        <th class="table-tr__table-id">ID</th>
        <th class="table-tr__table-genre">ジャンル</th>
        <th class="table-tr__table-title">タイトル</th>
        <th class="table-tr__table-name">投稿者</th>
        <th class="table-tr__table-date">投稿日時</th>
      </tr>
    </thead>
    <tbody>
      <% posts.each do |post| %>
        <tr class="table-tr">
          <td class="table-tr__table-id"><%= post.id %></td>
          <td class="table-tr__table-genre"><%= post.genre_i18n %></td>
          <td class="table-tr__table-title"><%= link_to "#{post.title}", post %></td>
          <td class="table-tr__table-name"><%= post.user.nickname %></td>
          <td class="table-tr__table-date"><%= post.created_at.strftime("%Y/%m/%d %H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>