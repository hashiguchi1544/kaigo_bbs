<hr>
<p id="notice"><%= notice %></p>
<h1>Posts</h1>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post %></td>
          <% if user_signed_in? && current_user.id == post.user_id %>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'このコメントを削除しても大丈夫でしょうか？' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

